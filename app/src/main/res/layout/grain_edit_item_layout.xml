<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btnDeleteGrain"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:contentDescription="@string/delete_grain_button_description"
        android:src="@drawable/trash_icon"
        app:tint="@color/colorPrimaryDark" />

    <EditText
            android:id="@+id/txtGrainAmountEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="@string/grainPoundsHint"
            android:hint="@string/grainPoundsHint"
            android:inputType="numberDecimal"
            android:maxWidth="80dp" />

    <TextView
            android:id="@+id/txtGrainAmountUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grainAmountUnit"
            android:layout_marginEnd="4dp" />

    <TextView
            android:id="@+id/txtGrainEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />
</LinearLayout>