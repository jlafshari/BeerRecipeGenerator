<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".newRecipe.AbvFragment">

    <TextView
            android:id="@+id/recipeAbvHeadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/recipe_abv_heading_fragment"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
            android:id="@+id/abvPicker"
            android:layout_width="84dp"
            android:layout_height="160dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:theme="@style/NumberPickerText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipeAbvHeadingTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>